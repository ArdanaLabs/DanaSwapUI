<div class="button" role="button">
    <div class="button-display button-effect">
        <svg width="<%=btn.width%>" height="46">
            <defs>
                <linearGradient id="grad1" x1="0" y1="0" x2="1" y2="0">
                    <stop offset="0" stop-color="#5F72FF"></stop>
                    <stop offset="1" stop-color="#73D6F1"></stop>
                </linearGradient>
            </defs>
            <g fill="none">
                <rect x="3" y="3" width="<%=btn.width - 6%>" height="40" rx="20" stroke="url(#grad1)"
                    stroke-width="3"></rect>
            </g>
        </svg>
        <div class="button-label">
            <%=btn.name%>
        </div>
    </div>
    <div class="button-border"></div>
</div>

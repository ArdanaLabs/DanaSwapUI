<div class="team_card-alignStretch Grid-item Grid-grid-xs-6 Grid-grid-sm-4 Grid-grid-md-3">
    <div id="team_card-bg-<%=card.index%>" class="team_card-bg">
        <div class="team_card-img">
            <div class="team_card-btn">
                <%- include('./circle_btn.ejs', {btn: 151}) %>
                <img class="team_card-photo" src="<%=card.avatar%>" alt="avatar">
            </div>
        </div>
        <div class="team_card-name">
            <%=card.name%>
        </div>
        <div class="team_card-role">
            <%=card.role%>
        </div>
        <div id="team_card-info-<%=card.index%>" class="team_card-info">
            <%-card.info%>
        </div>
        <div id="team_card-socials-<%=card.index%>" class="team_card-socials">
            <% if(card.socials.linkedin){ %>
                <a class="Typography-root Link-underlineHover Typography-colorPrimary"
                href="<%=card.socials.linkedin%>" >
                <img src="../../assets/icons/linkedin.svg" alt="linkedin"></a>
            <% } %>
            <% if(card.socials.twitter){ %>
                <a class="Typography-root Link-underlineHover Typography-colorPrimary"
                href="<%=card.socials.twitter%>" >
                <img src="../../assets/icons/twitter.svg" alt="twitter"></a>
            <% } %>
            <% if(card.socials.github){ %>
                <a class="Typography-root Link-underlineHover Typography-colorPrimary"
                href="<%=card.socials.github%>" >
                <img src="../../assets/icons/github.svg" alt="github"></a>
            <% } %>
        </div>
        <div id="expansion-<%=card.index%>" class="team_card-expansionBtn" onclick="expand('<%=card.index%>')">
            <img src="../../assets/icons/expand.svg" alt="expand">
        </div>
        <div id="collapse-<%=card.index%>" class="team_card-collapseBtn hide" onclick="collap('<%=card.index%>')">
            <img src="../../assets/icons/collapse.svg" alt="collapse">
        </div>
    </div>
</div>
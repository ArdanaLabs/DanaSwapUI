<div class="team_card-alignStretch Grid-item Grid-grid-xs-6 Grid-grid-sm-4 Grid-grid-md-3">
  <div id="team_card-bg-<%=card.index%>" class="team_card-bg">
    <div class="team_card-img">
      <div class="team_card-btn">
        <% let btn={size: 151, rx: 72.5} %>
        <%- include('./circle_btn.ejs', {btn: btn}) %>
          <img class="team_card-photo" src="<%=card.avatar%>" alt="">
      </div>
    </div>
    <div class="team_card-name">
      <%=card.name%>
    </div>
    <div class="team_card-role">
      <%=card.role%>
    </div>
  </div>
</div>
